<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:fitsSystemWindows="true"
    tools:context=".add_laundry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D0CDF8"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="16dp"
        android:paddingRight="24dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/txtno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D0CDF8"
                android:hint="No of Cloths:"
                android:inputType="number"
                android:textColor="@color/design_default_color_on_secondary"
                android:textColorHighlight="@color/design_default_color_secondary_variant"
                android:textColorHint="@color/design_default_color_secondary_variant"
                android:textColorLink="@color/design_default_color_on_secondary" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/design_default_color_on_primary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Type:"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/spinLaun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/design_default_color_on_primary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Sub Type:"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/spinLaun_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/design_default_color_on_primary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cost for 1 cloth:"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/black"
                android:textSize="17dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd_laun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:text="Add Laundry"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />

    </LinearLayout>
</ScrollView>